{
    "hosting": {
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "/**",
          "headers": [
            {
              "key": "X-Frame-Options",
              "value": "ALLOWALL"
            },
            {
              "key": "Content-Security-Policy",
              "value": "frame-ancestors *"
            }
          ]
        }
      ]
    }
  }
  